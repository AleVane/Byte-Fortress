<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="mx.edu.uacm.is.slt.ds.vitalpet.controllers.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 50;">
            <Text text="Sistema Veterinario" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
            
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <Label text="Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="txtUsername" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                
                <Label text="ContraseÃ±a:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <PasswordField fx:id="txtPassword" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                
                <Button text="Ingresar" fx:id="btnLogin" GridPane.columnIndex="1" GridPane.rowIndex="2" 
                        onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            </GridPane>
            
            <Label fx:id="lblMessage" style="-fx-text-fill: red;"/>
        </VBox>
    </center>
</BorderPane>
