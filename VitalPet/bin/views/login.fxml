<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>


<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
fx:controller="mx.edu.uacm.is.slt.ds.vitalpet.controllers.LoginController"
style="-fx-background-color: linear-gradient(to bottom right, #2c003e, #000000);">

    <center>

    <VBox alignment="CENTER" spacing="20" maxWidth="350" style="
        -fx-background-color: rgba(255, 255, 255, 0.1);
        -fx-background-radius: 20;
        -fx-padding: 40;
        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 5);
        -fx-font-family: 'Segoe UI';
    ">
<Label text="Iniciar Sesión" style="
    -fx-text-fill: white;
    -fx-font-weight: bold;
    -fx-padding: 10 20;
    -fx-font-size: 20;
"/>

<ImageView fx:id="avatarImage" fitWidth="100" fitHeight="100">
    <image>
        <Image url="@img/avatar.png" />
    </image>
</ImageView>

   <!-- Campo de texto para usuario -->
        <TextField fx:id="txtUsername" promptText="Email ID" style="
            -fx-background-color: transparent;
            -fx-border-color: white;
            -fx-border-width: 0 0 1 0;
            -fx-text-fill: white;
        "/>
         

          <!-- Campo de contraseña -->
        <PasswordField fx:id="txtPassword" promptText="Password" style="
            -fx-background-color: transparent;
            -fx-border-color: white;
            -fx-border-width: 0 0 1 0;
            -fx-text-fill: white;
        "/>
           <!-- Botón de login -->
        <Button fx:id="btnLogin" text="LOGIN" onAction="#handleLogin" style="
            -fx-background-color: linear-gradient(to right, #6a00ff, #9340ff);
            -fx-text-fill: white;
            -fx-font-weight: bold;
            -fx-padding: 10 20;
            -fx-background-radius: 30;
        "/>
        </VBox>
    </center>
</BorderPane>
