<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" 
     xmlns:fx="http://javafx.com/fxml/1"
     fx:controller="mx.edu.uacm.is.slt.ds.vitalpet.controllers.RegistroController"
     alignment="CENTER" spacing="20" 
     style="-fx-background-color: #f5f7fa; -fx-padding: 30;">

    <!-- Avatar en la parte superior -->
    <ImageView fx:id="imgAvatar" />
    
    <Label text="VitalPet - Registro" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <TextField fx:id="txtNombre" promptText="Nombre" style="-fx-pref-width: 250; -fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;"/>
        <TextField fx:id="txtApellido" promptText="Apellido" style="-fx-pref-width: 250; -fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;"/>
        <TextField fx:id="txtUsuario" promptText="Usuario" style="-fx-pref-width: 250; -fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;"/>
        <PasswordField fx:id="txtContrasena" promptText="Contraseña (mínimo 8 caracteres)" style="-fx-pref-width: 250; -fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;"/>
        
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnRegistrar" text="Registrarse" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8; -fx-background-radius: 5;"/>
            <Button fx:id="btnSalir" text="Salir" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8; -fx-background-radius: 5;"/>
        </HBox>
    </VBox>
</VBox>