<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" 
     xmlns:fx="http://javafx.com/fxml/1"
     fx:controller="mx.edu.uacm.is.slt.ds.vitalpet.controllers.LoginController"
     alignment="CENTER" spacing="20" 
     style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #4ca1af);; -fx-padding: 30;">

    <!-- Avatar en la parte superior -->
    <ImageView fx:id="imgAvatar" />
    
    <Label text="VitalPet" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: linear-gradient(to right, #2c3e50, #4ca1af); -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <TextField fx:id="txtUsuario" promptText="Usuario" style="-fx-pref-width: 250; -fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;"/>
        <PasswordField fx:id="txtPassword" promptText="Password" style="-fx-pref-width: 250; -fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;"/>
        
        <HBox spacing="20" alignment="CENTER_LEFT">
            <CheckBox fx:id="chkRemember" text="Remember me" style="-fx-text-fill: #555;"/>
            <Hyperlink fx:id="linkForgot" text="Forgot Password?" style="-fx-text-fill: #3498db; -fx-border-color: transparent;"/>
        </HBox>
        
        <Button fx:id="btnLogin" text="LOGIN" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 250; -fx-padding: 8; -fx-background-radius: 5;"/>
        
        <HBox alignment="CENTER" spacing="5">
            <Label text="No tienes cuenta?" style="-fx-text-fill: #555;"/>
            <Hyperlink fx:id="linkRegistro" text="Regístrate aquí" style="-fx-text-fill: #3498db; -fx-border-color: transparent;"/>
        </HBox>
    </VBox>
</VBox>