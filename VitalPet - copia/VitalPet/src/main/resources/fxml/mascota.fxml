<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="mx.edu.uacm.is.slt.ds.vitalpet.controllers.MascotaController" spacing="10" style="-fx-padding: 20;">
    <Text text="GestiÃ³n de Mascotas" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
    
    <GridPane hgap="10" vgap="10">
        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Edad:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtEdad" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Raza:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtRaza" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="Color:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="txtColor" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <Label text="Sexo:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <ComboBox fx:id="cbSexo" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>
    
    <Button text="Guardar" onAction="#handleGuardar" 
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 5 15 5 15;"/>
    
    <Label fx:id="lblMessage"/>
</VBox>
